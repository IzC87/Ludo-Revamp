                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>




            <!-- Left menu -->
            <!-- Dice -->
            <Button
            x:Name="Diebutton"
            Click="RollDie_Click"
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="2"
            FontSize="44"
            Content="Die"
            IsEnabled="False"/>

            <!-- Player Scores -->
            <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Score:"/>


            <!-- Player one Score -->
            <ListView
            x:Name="Player1Scores"
            Grid.Row="3"
            Grid.Column="0"
            Grid.RowSpan="3"/>


            <!-- Player two Score -->
            <ListView
            x:Name="Player2Scores"
            Grid.Row="6"
            Grid.Column="0"
            Grid.RowSpan="3"/>


            <!-- Player three Score -->
            <ListView
            x:Name="Player3Scores"
            Grid.Row="9"
            Grid.Column="0"
            Grid.RowSpan="3"/>


            <!-- Player four Score -->
            <ListView
            x:Name="Player4Scores"
            Grid.Row="12"
            Grid.Column="0"
            Grid.RowSpan="3"/>




            <!-- Right menu -->
            <!-- List view for history -->
        <ListView
            x:Name="HistoryListview"
            Grid.Row="0"
            Grid.Column="16"
            Grid.RowSpan="9">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, Mode=TwoWay}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


            <!-- List of saved Games -->
            <ComboBox
                x:Name="SavedGamesList"
                Grid.Row="15"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                FontSize="14">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="2">
                                <TextBlock Text="{Binding Name}" />
                            </Border>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
            </ComboBox>

        <!-- Load button -->
            <Button
                x:Name="LoadGameButton"
                Click="LoadGame_Click"
                Grid.Row="15"
                Grid.Column="4"
                Grid.ColumnSpan="3"
                FontSize="18"
                Content="Load game"/>

        <!-- Number of Computers -->
            <ComboBox
            x:Name="NumberOfComputersList"
            Grid.Row="11"
            Grid.Column="16"
            FontSize="14">
                <ComboBoxItem>0 Computers</ComboBoxItem>
                <ComboBoxItem>1 Computer</ComboBoxItem>
                <ComboBoxItem>2 Computers</ComboBoxItem>
                <ComboBoxItem IsSelected="True">3 Computers</ComboBoxItem>
                <ComboBoxItem>4 Computers</ComboBoxItem>
            </ComboBox>

            <!-- Number of people -->
            <ComboBox
            x:Name="NumberOfPlayersList"
            Grid.Row="12"
            Grid.Column="16"
            FontSize="14">
                <ComboBoxItem>0 People</ComboBoxItem>
                <ComboBoxItem IsSelected="True">1 Person</ComboBoxItem>
                <ComboBoxItem>2 People</ComboBoxItem>
                <ComboBoxItem>3 People</ComboBoxItem>
                <ComboBoxItem>4 People</ComboBoxItem>
            </ComboBox>


            <!-- Game name -->
            <TextBox
                x:Name="GameNameBox"
                Grid.Row="13"
                Grid.Column="16"
                FontSize="18"
                VerticalContentAlignment="Center"
                Text="Game name"/>

            <!-- New game button -->
            <Button
                x:Name="NewGameButton"
                Click="NewGame_Click"
                Grid.Row="14"
                Grid.Column="16"
                FontSize="18"
                Content="Start new game"/>




